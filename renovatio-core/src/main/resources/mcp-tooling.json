{
  "name": "Renovatio OpenRewrite MCP Server",
  "version": "1.0.0",
  "spec": "2025-06-18",
  "description": "Full Model Content Protocol server exposing OpenRewrite recipes and functionality as MCP tooling",
  "capabilities": {
    "tools": {
      "listChanged": false
    },
    "prompts": {
      "listChanged": false
    },
    "resources": {
      "listChanged": false
    }
  },
  "tools": [
    {
      "name": "openrewrite",
      "description": "Run OpenRewrite recipes for automated refactoring",
      "command": "mvn -q rewrite:run",
      "parameters": [
        {
          "name": "recipe",
          "type": "string",
          "description": "Recipe name to run"
        },
        {
          "name": "sourcePath",
          "type": "string",
          "description": "Path to source code"
        }
      ],
      "example": {
        "recipe": "org.openrewrite.java.format.AutoFormat",
        "sourcePath": "/home/faguero/accenture/renovatio/samples/java"
      }
    },
    {
      "name": "cobol_analyze",
      "description": "Analyze code structure and extract information for COBOL",
      "parameters": [
        {
          "name": "scope",
          "type": "string",
          "description": "Path to COBOL source directory"
        },
        {
          "name": "nql",
          "type": "string",
          "description": "NQL query (optional)"
        }
      ],
      "example": {
        "scope": "/home/faguero/accenture/renovatio/samples/cobol/Cobol-Programming-Collection",
        "nql": ""
      }
    },
    {
      "name": "cobol_generate_stubs",
      "description": "Generate interface stubs for COBOL programs",
      "parameters": [
        {
          "name": "scope",
          "type": "string",
          "description": "Path to COBOL source directory"
        },
        {
          "name": "nql",
          "type": "string",
          "description": "NQL query (optional)"
        }
      ],
      "example": {
        "scope": "/home/faguero/accenture/renovatio/samples/cobol/Cobol-Programming-Collection",
        "nql": ""
      }
    },
    {
      "name": "java_analyze",
      "description": "Analyze code structure and extract information for Java",
      "parameters": [
        {
          "name": "scope",
          "type": "string",
          "description": "Path to Java source directory"
        },
        {
          "name": "nql",
          "type": "string",
          "description": "NQL query (optional)"
        }
      ],
      "example": {
        "scope": "/home/faguero/accenture/renovatio/samples/java",
        "nql": ""
      }
    }
  ]
}
